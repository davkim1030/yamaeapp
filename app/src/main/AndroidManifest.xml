                android:value="com.yamae.yamaeapp.MainActivity "/>
        </activity>

        <activity
            android:name=".Menu_Dinning_Activity"
            android:parentActivityName="com.yamae.yamaeapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yamae.yamaeapp.MainActivity "/>
        </activity>

        <activity
            android:name=".Menu_Drink_Activity"
            android:parentActivityName="com.yamae.yamaeapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yamae.yamaeapp.MainActivity "/>
        </activity>

        <activity
            android:name=".Menu_info_Activity"
            android:parentActivityName="com.yamae.yamaeapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yamae.yamaeapp.MainActivity "/>
        </activity>

        <activity
            android:name=".Menu_Night_Activity"
            android:parentActivityName="com.yamae.yamaeapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yamae.yamaeapp.MainActivity "/>
        </activity>

        <activity
            android:name=".DetailActivity"
            android:parentActivityName="com.yamae.yamaeapp.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yamae.yamaeapp.MainActivity "/>
        </activity>
    </application>

</manifest>
