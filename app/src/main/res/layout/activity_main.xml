<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="7">

        <Button
            android:id="@+id/button_all"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="ALL"
            android:textStyle="bold"
            android:textColor="#1c1c1c"
            android:textSize="35sp"
            android:background="#fff718"/>

        <Button
            android:id="@+id/button_dinning"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:textStyle="bold"
            android:textColor="#1c1c1c"
            android:background="#e7ec2a"
            android:text="식당"
            android:textSize="35sp"/>

        <Button
            android:id="@+id/button_chicken"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="치킨"
            android:textColor="#1c1c1c"
            android:textStyle="bold"
            android:textSize="35sp"
            android:background="#bfdb48"/>

        <Button
            android:id="@+id/button_night"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="야식"
            android:textStyle="bold"
            android:textColor="#1c1c1c"
            android:textSize="35sp"
            android:background="#93c869"/>

        <Button
            android:id="@+id/button_drink"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:gravity="center"
            android:text="술집"
            android:textStyle="bold"
            android:textColor="#1c1c1c"
            android:textSize="35sp"
            android:background="#6bb687"/>

        <Button
            android:id="@+id/button_etc"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="기타"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1c1c1c"
            android:textSize="35sp"
            android:background="#4ea99d"/>

        <Button
            android:id="@+id/button_info"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="어플 정보"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#1c1c1c"
            android:textSize="35sp"
            android:background="#319cb3"/>

    </LinearLayout>

</LinearLayout>
